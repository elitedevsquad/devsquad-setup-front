#!/bin/sh

npm install husky --save-dev
npx husky install
npm pkg set scripts.prepare="husky install"

# yarn only
npm pkg set scripts.postinstall="husky install"

echo "1. Install .husky/pre-rebase"
#curl -s -o .husky/pre-rebase "https://raw.githubusercontent.com/elitedevsquad/devsquad-setup-front/master/hooks/pre-rebase"
chmod +x .husky/pre-rebase

echo "2. Install .husky/pre-push"
#curl -s -o .husky/pre-push "https://raw.githubusercontent.com/elitedevsquad/devsquad-setup-front/master/hooks/pre-push"
chmod +x .husky/pre-push

echo "3. Install .husky/commit-msg"
#curl -s -o .husky/commit-msg "https://raw.githubusercontent.com/elitedevsquad/devsquad-setup-front/master/hooks/commit-msg"
chmod +x .husky/commit-msg